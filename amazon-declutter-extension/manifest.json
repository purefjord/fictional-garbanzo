{
  "manifest_version": 3,
  "name": "Amazon Declutter",
  "version": "1.0.0",
  "description": "Makes Amazon actually browsable by removing sponsored content, algorithmic garbage, and UI clutter",
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["*://*.amazon.com/*", "*://*.amazon.co.uk/*", "*://*.amazon.ca/*", "*://*.amazon.de/*", "*://*.amazon.fr/*", "*://*.amazon.es/*", "*://*.amazon.it/*", "*://*.amazon.co.jp/*", "*://*.amazon.in/*", "*://*.amazon.com.au/*", "*://*.amazon.com.mx/*", "*://*.amazon.com.br/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.amazon.com/*", "*://*.amazon.co.uk/*", "*://*.amazon.ca/*", "*://*.amazon.de/*", "*://*.amazon.fr/*", "*://*.amazon.es/*", "*://*.amazon.it/*", "*://*.amazon.co.jp/*", "*://*.amazon.in/*", "*://*.amazon.com.au/*", "*://*.amazon.com.mx/*", "*://*.amazon.com.br/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
